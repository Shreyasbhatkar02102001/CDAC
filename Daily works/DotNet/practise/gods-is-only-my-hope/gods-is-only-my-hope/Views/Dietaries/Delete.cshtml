@model gods_is_only_my_hope.Models.Dietary

@{
    ViewData["Title"] = "Delete Dietary";
}

<div class="container mt-4">
    <h1 class="display-6 text-danger">Delete Confirmation</h1>
    <p class="text-muted">Are you sure you want to delete this dietary preference? This action cannot be undone.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Dietary Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- User Name -->
                <dt class="col-sm-4">User Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                <!-- Dietary Preference -->
                <dt class="col-sm-4">Dietary Preference</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DietaryPreference)</dd>

                <!-- Description -->
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="DietaryId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>