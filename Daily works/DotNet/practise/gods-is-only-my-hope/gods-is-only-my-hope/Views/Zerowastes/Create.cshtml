@model gods_is_only_my_hope.Models.Zerowaste

@{
    ViewData["Title"] = "Create Zero Waste Entry";
}

<div class="container mt-4">
    <h1 class="display-6">Create Zero Waste Entry</h1>
    <p class="text-muted">Fill in the details below to create a new zero waste entry.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Donated To -->
                <div class="mb-3">
                    <label asp-for="DonatedTo" class="form-label"></label>
                    <input asp-for="DonatedTo" class="form-control" placeholder="Enter recipient name or organization" />
                    <span asp-validation-for="DonatedTo" class="text-danger"></span>
                </div>

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter item name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Quantity -->
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Create Entry
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}