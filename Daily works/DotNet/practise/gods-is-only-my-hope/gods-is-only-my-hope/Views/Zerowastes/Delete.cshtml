@model gods_is_only_my_hope.Models.Zerowaste

@{
    ViewData["Title"] = "Delete Zerowaste";
}

<div class="container mt-4">
    <h1 class="display-6 text-danger">Delete Confirmation</h1>
    <p class="text-muted">Are you sure you want to delete this zerowaste entry? This action cannot be undone.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Zerowaste Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Donated To -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DonatedTo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DonatedTo)</dd>

                <!-- Name -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <!-- Quantity -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>