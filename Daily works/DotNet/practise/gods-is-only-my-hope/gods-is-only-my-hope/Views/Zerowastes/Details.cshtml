@model gods_is_only_my_hope.Models.Zerowaste

@{
    ViewData["Title"] = "Zerowaste Details";
}

<div class="container mt-4">
    <h1 class="display-6">Zerowaste Details</h1>
    <p class="text-muted">View detailed information about the selected zerowaste donation.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Zerowaste Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Donated To -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DonatedTo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DonatedTo)</dd>

                <!-- Name -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <!-- Quantity -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>