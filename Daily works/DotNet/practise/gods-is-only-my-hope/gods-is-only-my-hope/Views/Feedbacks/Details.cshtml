@model gods_is_only_my_hope.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
}

<div class="container mt-4">
    <h1 class="display-6">Feedback Details</h1>
    <p class="text-muted">View detailed information about the selected feedback.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Feedback Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Chef Name -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ChefName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ChefName)</dd>

                <!-- Feedback -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Feedback1)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Feedback1)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>