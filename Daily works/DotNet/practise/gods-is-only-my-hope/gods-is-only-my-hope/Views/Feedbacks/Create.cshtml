@model gods_is_only_my_hope.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
}

<div class="container mt-4">
    <h1 class="display-6">Create New Feedback</h1>
    <p class="text-muted">Fill in the details below to provide feedback.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Chef Name -->
                <div class="mb-3">
                    <label asp-for="ChefName" class="form-label"></label>
                    <input asp-for="ChefName" class="form-control" placeholder="Enter chef's name" />
                    <span asp-validation-for="ChefName" class="text-danger"></span>
                </div>

                <!-- Feedback -->
                <div class="mb-3">
                    <label asp-for="Feedback1" class="form-label"></label>
                    <textarea asp-for="Feedback1" class="form-control" placeholder="Enter your feedback"></textarea>
                    <span asp-validation-for="Feedback1" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Create Feedback" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}