@model List<CRUD_basic.Models.User>

<h1>Users</h1>
<p>
	<a asp-action="Create" class="btn btn-primary">Add</a>
</p>

<table class="table table-striped">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Contact</th>
		<th>Created</th>
		<th>Updated</th>
		<th>Actions</th>
	</thead>
	<tbody>
		@foreach (var user in Model){
			<tr>
				<td>@user.Id</td>
				<td>@user.Name</td>
				<td>@user.Email</td>
				<td>@user.Contact</td>
				<td>@user.Created</td>
				<td>@user.Updated</td>
				<td>
					<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
				</td>
				<td>
					<a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>