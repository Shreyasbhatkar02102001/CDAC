@model customer_bootstrap.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<div class="container mt-4">
    <h1 class="display-6">Create New Payment</h1>
    <p class="text-muted">Fill in the details below to create a new payment.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Order ID -->
                <div class="mb-3">
                    <label asp-for="OrderId" class="form-label"></label>
                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId">
                        <option value="">-- Select Order --</option>
                    </select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <!-- Subscription ID -->
                <div class="mb-3">
                    <label asp-for="SubscriptionId" class="form-label"></label>
                    <select asp-for="SubscriptionId" class="form-control" asp-items="ViewBag.SubscriptionId">
                        <option value="">-- Select Subscription --</option>
                    </select>
                    <span asp-validation-for="SubscriptionId" class="text-danger"></span>
                </div>

                <!-- Amount Paid -->
                <div class="mb-3">
                    <label asp-for="AmountPaid" class="form-label"></label>
                    <input asp-for="AmountPaid" type="number" step="0.01" class="form-control" placeholder="Enter amount paid" />
                    <span asp-validation-for="AmountPaid" class="text-danger"></span>
                </div>

                <!-- Payment Method -->
                <div class="mb-3">
                    <label asp-for="PaymentMethod" class="form-label"></label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="Credit Card">Credit Card</option>
                        <option value="UPI">UPI</option>
                        <option value="Cash on Delivery">Cash on Delivery</option>
                    </select>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <!-- Payment Status -->
                <div class="mb-3">
                    <label asp-for="PaymentStatus" class="form-label"></label>
                    <select asp-for="PaymentStatus" class="form-select">
                        <option value="Paid">Paid</option>
                        <option value="Pending">Pending</option>
                    </select>
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Create Payment" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}