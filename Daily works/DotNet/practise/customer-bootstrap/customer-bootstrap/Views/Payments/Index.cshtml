@model IEnumerable<customer_bootstrap.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Payments</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AmountPaid)</th>
                    <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                    <th>@Html.DisplayNameFor(model => model.PaymentStatus)</th>
                    <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Order)</th>
                    <th>@Html.DisplayNameFor(model => model.Subscription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                        <td>
                            <span class="badge @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-danger")">
                                @Html.DisplayFor(modelItem => item.PaymentStatus)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Order.OrderId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subscription.SubscriptionId)</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>