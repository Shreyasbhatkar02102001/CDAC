@model customer_bootstrap.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-4">
    <h1 class="display-6 text-danger">Delete Confirmation</h1>
    <p class="text-muted">Are you sure you want to delete this payment? This action cannot be undone.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Payment Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Amount Paid -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AmountPaid)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AmountPaid)</dd>

                <!-- Payment Method -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentMethod)</dd>

                <!-- Payment Status -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentStatus)</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-danger")">
                        @Html.DisplayFor(model => model.PaymentStatus)
                    </span>
                </dd>

                <!-- Payment Date -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentDate)</dd>

                <!-- Order -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Order)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Order.OrderId)</dd>

                <!-- Subscription -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Subscription)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Subscription.SubscriptionId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="PaymentId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>