@model customer_bootstrap.Models.Rating

@{
    ViewData["Title"] = "Delete Rating";
}

<div class="container mt-4">
    <h1 class="display-6 text-danger">Delete Confirmation</h1>
    <p class="text-muted">Are you sure you want to delete this rating? This action cannot be undone.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Rating Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Rating -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Rating1)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Rating1)</dd>

                <!-- Review Comment -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ReviewComment)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReviewComment)</dd>

                <!-- Review Date -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ReviewDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReviewDate)</dd>

                <!-- Chef -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Chef)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Chef.ChefId)</dd>

                <!-- Meal -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Meal)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Meal.MealId)</dd>

                <!-- User -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.User)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="RatingId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>