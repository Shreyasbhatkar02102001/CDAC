@model customer_bootstrap.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h1 class="display-6">Order Details</h1>
    <p class="text-muted">View detailed information about the selected order.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Order Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Quantity -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                <!-- Order Date -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrderDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>

                <!-- Delivery Address -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DeliveryAddress)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DeliveryAddress)</dd>

                <!-- Total Amount -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalAmount)</dd>

                <!-- Status -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Status == "Confirmed" ? "bg-success" : "bg-warning")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <!-- Delivery Time Slot -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DeliveryTimeSlot)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DeliveryTimeSlot)</dd>

                <!-- Payment Status -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentStatus)</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-danger")">
                        @Html.DisplayFor(model => model.PaymentStatus)
                    </span>
                </dd>

                <!-- Payment Method -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentMethod)</dd>

                <!-- Chef -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Chef)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Chef.ChefId)</dd>

                <!-- Meal -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Meal)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Meal.MealId)</dd>

                <!-- User -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.User)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>