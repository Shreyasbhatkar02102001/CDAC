@model IEnumerable<customer_bootstrap.Models.Chef>

@{
    ViewData["Title"] = "Chefs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Chefs</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>@Html.DisplayNameFor(model => model.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(model => model.DeliveryArea)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.ContactInfo)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailNavigation)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Bio)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProfilePicture)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeliveryArea)</td>
                        <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactInfo)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmailNavigation.Email)</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.ChefId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ChefId" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ChefId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>