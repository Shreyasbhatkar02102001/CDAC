@model customer_bootstrap.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <h1 class="display-6">User Details</h1>
    <p class="text-muted">View detailed information about the selected user.</p>
    <hr />

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>User Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Name -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <!-- Phone Number -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <!-- Dietary Preferences -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DietaryPreferences)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DietaryPreferences)</dd>

                <!-- Profile Picture -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProfilePicture)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProfilePicture)</dd>

                <!-- Created At -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <!-- Updated At -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>

                <!-- Email Navigation -->
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmailNavigation)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailNavigation.Email)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>